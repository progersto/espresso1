<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AddressFragmentFields">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProductProgressBarFields">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777</item>
    </style>

    <style name="HomePageHeaders">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/header_home_background</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="EditAddressLabel">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditAddressField">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#ccc</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">#ddd</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/green</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/green</item>

    </style>

    <style name="ButtonKeyboard" parent="android:Widget.Button">
        <item name="android:background">@drawable/keyboard_background</item>
    </style>





</resources>
