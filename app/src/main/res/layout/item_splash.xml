<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_size_300sp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/text_size_15sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_size_10sp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/text_size_80sp"
            android:layout_height="@dimen/text_size_80sp"
            app:srcCompat="@drawable/r_star" />


        <com.miracas.espresso.widget.DTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_20sp"
            android:gravity="center"
            android:text="Welcome !"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15sp"/>

        <com.miracas.espresso.widget.DTextView
            android:id="@+id/contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_5sp"
            android:gravity="center"
            android:text="Welcome !"
            android:textColor="@color/text_dim_black"
            android:textSize="@dimen/text_size_12sp" />


    </LinearLayout>


</android.support.v7.widget.CardView>
