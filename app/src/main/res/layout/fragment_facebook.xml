<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.miracas.espresso.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_size_30sp"
            android:text="Welcome aboard! Let us set you up"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_15sp"/>

        <com.miracas.espresso.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_size_7sp"
            android:gravity="center"
            android:text="Allow us to get your basic information through \n facebook"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_9sp"/>

        <ImageView
            android:layout_width="@dimen/text_size_60sp"
            android:layout_height="@dimen/text_size_60sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_size_10sp"
            android:src="@drawable/ic_facebook"/>

        <com.miracas.espresso.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_size_20sp"
            android:gravity="center"
            android:text="Oh, and some of your friend have invited you to \n join them:)"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_9sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_1sp"
            android:layout_marginTop="@dimen/text_size_30sp"
            android:background="@color/text_grey" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFacebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/text_size_5sp"
            android:paddingTop="@dimen/text_size_10sp"
            android:scrollbars="none" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>