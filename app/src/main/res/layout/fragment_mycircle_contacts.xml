<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/white"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="snap"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_border_rounded_gray"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/search_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/ic_search" />

            <com.miracas.espresso.widget.DEditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_40sdp"
                android:inputType="textCapSentences"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/text_black"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/pending_requests_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_fill_bronz_gray"
            android:gravity="center_vertical">

            <com.miracas.espresso.widget.DTextView
                android:id="@+id/pending_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/bg_red_fill_rounded_btn"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <com.miracas.espresso.widget.DTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Response to pending friend request now?"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_right_arrow" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvContacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:scrollbars="none" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="@dimen/floating_button_radius"
        android:layout_height="@dimen/floating_button_radius"
        android:layout_margin="@dimen/fab_margin"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_gravity="right|bottom"
        android:src="@drawable/btn_add"/>

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/btn_add"-->
        <!--android:layout_width="@dimen/floating_button_radius"-->
        <!--android:layout_height="@dimen/floating_button_radius"-->
        <!--android:layout_gravity="right|bottom"-->
        <!--android:scaleType="center"-->
        <!--android:backgroundTint="@android:color/transparent"-->
        <!--android:padding="2dp"-->
        <!--android:layout_margin="@dimen/floating_button_margin"-->
        <!--android:src="@drawable/btn_add"/>-->

    <include layout="@layout/progress"/>

</android.support.design.widget.CoordinatorLayout>